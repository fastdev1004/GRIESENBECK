<Page x:Class="WpfApp.ProjectView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp"
      xmlns:converter="clr-namespace:WpfApp.Converter"
      xmlns:col="clr-namespace:System.Collections;assembly=mscorlib"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1700"
      Title="ViewProject">
    <Page.Resources>
        <ResourceDictionary>
            <converter:ApprDenToValueConverter x:Key="ApprDenToValueConverter" />
            <converter:ZeroToEmptyStringConverter x:Key="ZeroToEmptyStringConverter" />
            <converter:IntToDollarConverter x:Key="IntToDollarConverter" />
            <converter:DateTimeConverter x:Key="DateTimeConverter" />

            <ContextMenu x:Key="NoteContextMenu">
                <MenuItem Header="New" Command="{Binding AddNewNoteCommand}"/>
            </ContextMenu>
            <ContextMenu x:Key="ProjectNoteRowContextMenu">
                <MenuItem Header="Delete" Click="RemoveProjectNoteItem"/>
            </ContextMenu>
            <Style x:Key="ProjectNoteRowStyle" TargetType="{x:Type DataGridRow}">
                <Setter Property="ContextMenu" Value="{StaticResource ProjectNoteRowContextMenu}" />
                <Setter Property="Margin" Value="0, 4" />
            </Style>

            <ContextMenu x:Key="ProjectLinkContextMenu">
                <MenuItem Header="New" Command="{Binding AddNewProjectLinkCommand}"/>
            </ContextMenu>
            <ContextMenu x:Key="DescRowContextMenu">
                <MenuItem Header="Delete" Click="RemoveDescItem"/>
            </ContextMenu>
            <Style x:Key="DescRowStyle" TargetType="{x:Type DataGridRow}">
                <Setter Property="ContextMenu" Value="{StaticResource DescRowContextMenu}" />
                <Setter Property="Margin" Value="0, 4" />
            </Style>
            <ContextMenu x:Key="PmContextMenu">
                <MenuItem Header="New" Command="{Binding AddNewPmCommand}"/>
            </ContextMenu>
            <ContextMenu x:Key="PmRowContextMenu">
                <MenuItem Header="Delete" Click="RemovePmItem"/>
            </ContextMenu>
            <Style x:Key="PmRowStyle" TargetType="{x:Type DataGridRow}">
                <Setter Property="ContextMenu" Value="{StaticResource PmRowContextMenu}" />
                <Setter Property="Margin" Value="0, 4" />
            </Style>

            <ContextMenu x:Key="SuptContextMenu">
                <MenuItem Header="New" Command="{Binding AddNewSuptCommand }" />
            </ContextMenu>
            <ContextMenu x:Key="SupRowContextMenu">
                <MenuItem Header="Delete" Click="RemoveSupItem" />
            </ContextMenu>
            <Style x:Key="SupRowStyle" TargetType="{x:Type DataGridRow}">
                <Setter Property="ContextMenu" Value="{StaticResource SupRowContextMenu}" />
                <Setter Property="Margin" Value="0, 4" />
            </Style>

            <ContextMenu x:Key="SovContextMenu">
                <MenuItem Header="New" Command="{Binding AddNewSovCommand }" />
            </ContextMenu>
            <ContextMenu x:Key="SovRowContextMenu">
                <MenuItem Header="Delete" Click="RemoveSovItem" />
            </ContextMenu>
            <Style x:Key="SovRowStyle" TargetType="{x:Type DataGridRow}">
                <Setter Property="ContextMenu" Value="{StaticResource SovRowContextMenu}" />
                <Setter Property="Margin" Value="0, 4" />
            </Style>

            <ContextMenu x:Key="SovMatContextMenu">
                <MenuItem Header="New" Command="{Binding AddNewSovMatCommand }" />
            </ContextMenu>
            <ContextMenu x:Key="SovMatRowContextMenu">
                <MenuItem Header="Delete" Click="RemoveSovMatItem" />
            </ContextMenu>
            <Style x:Key="SovMatRowStyle" TargetType="{x:Type DataGridRow}">
                <Setter Property="ContextMenu" Value="{StaticResource SovMatRowContextMenu}" />
                <Setter Property="Margin" Value="0, 4" />
            </Style>

            <ContextMenu x:Key="SovLabContextMenu">
                <MenuItem Header="New" Command="{Binding AddNewSovLabCommand }" />
            </ContextMenu>
            <ContextMenu x:Key="SovLabRowContextMenu">
                <MenuItem Header="Delete" Click="RemoveSovLabItem" />
            </ContextMenu>
            <Style x:Key="SovLabRowStyle" TargetType="{x:Type DataGridRow}">
                <Setter Property="ContextMenu" Value="{StaticResource SovLabRowContextMenu}" />
                <Setter Property="Margin" Value="0, 4" />
            </Style>

            <ContextMenu x:Key="ProjMatTrackingContextMenu">
                <MenuItem Header="New" Command="{Binding AddNewProjMatTrackingCommand }" />
            </ContextMenu>
            <ContextMenu x:Key="ProjMatTrackingRowContextMenu">
                <MenuItem Header="Delete" Click="RemoveProjMatTrackingItem" />
            </ContextMenu>
            <Style x:Key="ProjMatTrackingRowStyle" TargetType="{x:Type DataGridRow}">
                <Setter Property="ContextMenu" Value="{StaticResource ProjMatTrackingRowContextMenu}" />
                <Setter Property="Margin" Value="0, 4" />
            </Style>

            <ContextMenu x:Key="ProjMatShippingContextMenu">
                <MenuItem Header="New" Command="{Binding AddNewProjMatShippingCommand }" />
            </ContextMenu>
            <ContextMenu x:Key="ProjMatShippingRowContextMenu">
                <MenuItem Header="Delete" Click="RemoveProjMatShippingItem" />
            </ContextMenu>
            <Style x:Key="ProjMatShippingRowStyle" TargetType="{x:Type DataGridRow}">
                <Setter Property="ContextMenu" Value="{StaticResource ProjMatShippingRowContextMenu}" />
                <Setter Property="Margin" Value="0, 4" />
            </Style>

            <ContextMenu x:Key="InstallNoteContextMenu">
                <MenuItem Header="New" Command="{Binding AddNewInstallNoteCommand }" />
            </ContextMenu>
            <ContextMenu x:Key="InstallNoteRowContextMenu">
                <MenuItem Header="Delete" Click="RemoveInstallNoteItem" />
            </ContextMenu>
            <Style x:Key="InstallNoteRowStyle" TargetType="{x:Type DataGridRow}">
                <Setter Property="ContextMenu" Value="{StaticResource InstallNoteRowContextMenu}" />
                <Setter Property="Margin" Value="0, 4" />
            </Style>

            <ContextMenu x:Key="ContractContextMenu">
                <MenuItem Header="New" Command="{Binding AddNewContractCommand }" />
            </ContextMenu>
            <ContextMenu x:Key="ContractRowContextMenu">
                <MenuItem Header="Delete" Click="RemoveContractItem" />
            </ContextMenu>
            <Style x:Key="ContractRowStyle" TargetType="{x:Type DataGridRow}">
                <Setter Property="ContextMenu" Value="{StaticResource ContractRowContextMenu}" />
                <Setter Property="Margin" Value="0, 4" />
            </Style>

            <ContextMenu x:Key="ChangeOrderContextMenu">
                <MenuItem Header="New" Command="{Binding AddNewChangeOrderCommand }" />
            </ContextMenu>
            <ContextMenu x:Key="ChangeOrderRowContextMenu">
                <MenuItem Header="Delete" Click="RemoveChangeOrderItem" />
            </ContextMenu>
            <Style x:Key="ChangeOrderRowStyle" TargetType="{x:Type DataGridRow}">
                <Setter Property="ContextMenu" Value="{StaticResource ChangeOrderRowContextMenu}" />
                <Setter Property="Margin" Value="0, 4" />
            </Style>

            <ContextMenu x:Key="CipContextMenu">
                <MenuItem Header="New" Command="{Binding AddNewCipCommand }" />
            </ContextMenu>
            <ContextMenu x:Key="CipRowContextMenu">
                <MenuItem Header="Delete" Click="RemoveCipItem" />
            </ContextMenu>
            <Style x:Key="CipRowStyle" TargetType="{x:Type DataGridRow}">
                <Setter Property="ContextMenu" Value="{StaticResource CipRowContextMenu}" />
                <Setter Property="Margin" Value="0, 4" />
            </Style>

            <ContextMenu x:Key="WorkNoteContextMenu">
                <MenuItem Header="New" Command="{Binding AddNewWorkNoteCommand}"/>
            </ContextMenu>
            <ContextMenu x:Key="WorkNoteRowContextMenu">
                <MenuItem Header="Delete" Click="RemoveWorkNoteItem"/>
            </ContextMenu>
            <Style x:Key="WorkNoteRowStyle" TargetType="{x:Type DataGridRow}">
                <Setter Property="ContextMenu" Value="{StaticResource WorkNoteRowContextMenu}" />
                <Setter Property="Margin" Value="0, 4" />
            </Style>
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Themes/Generic.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid>
            <Border BorderThickness="0 0 0 4" BorderBrush="#B6302D">
                <Grid Background="#14305F">
                    <Button Click="GoBack" Width="40" Height="20" HorizontalAlignment="Left" Margin="10,0,0,0">Back</Button>
                    <TextBlock Margin="80, 0,0,0" Text="Projects" FontSize="32" Foreground="White" VerticalAlignment="Center">
                    </TextBlock>
                </Grid>
            </Border>
        </Grid>
        <Grid Grid.Row="1" Margin="10, 24, 10, 10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <WrapPanel>
                    <Label>Select Project:</Label>
                    <ComboBox IsEditable="True" Width="400" ItemsSource="{Binding Projects, Mode=TwoWay}" DisplayMemberPath="ProjectName" SelectedValuePath="ID" SelectedValue="{Binding ProjectID, Mode=TwoWay}" IsEnabled="{Binding ProjectSelectionEnable}" Validation.ErrorTemplate="{x:Null}" />
                </WrapPanel>
                <WrapPanel Grid.Column="1" HorizontalAlignment="Left">
                    <Button Content="New" Command="{Binding NewProjectCommand}" />
                    <Button Content="Print" Margin="8,0,0,0" />
                    <Button Content="Email" Margin="8,0,0,0" />
                    <Button Content="Save" Margin="8,0,0,0" Command="{Binding SaveCommand}" />
                </WrapPanel>
            </Grid>
        </Grid>
        <Grid Grid.Row="2">
            <TabControl Margin="10" BorderBrush="Gainsboro">
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border Name="Border" BorderThickness="1,1,1,0" BorderBrush="Gainsboro" CornerRadius="4,4,0,0" Margin="2,0">
                                        <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Margin="10,2"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="LightSkyBlue" />
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="False">
                                            <Setter TargetName="Border" Property="Background" Value="GhostWhite" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>
                <TabItem Header="Project">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                        </Grid.RowDefinitions>
                        <Grid Margin="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="260*" />
                                <ColumnDefinition Width="335*"/>
                                <ColumnDefinition Width="238*" />
                            </Grid.ColumnDefinitions>
                            <Grid Grid.ColumnSpan="2">
                                <Grid.Resources>
                                    <Style TargetType="{x:Type Label}">
                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                    </Style>
                                </Grid.Resources>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>
                                <Grid Margin="4">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid Style="{StaticResource ParentGridStyle}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="128" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Label>Project Name:</Label>
                                        <TextBox x:Name="ProjectName_TB" Text="{Binding TempProject.ProjectName, Mode=TwoWay}" Grid.Column="1" Margin="0,0,64,0" />
                                    </Grid>
                                    <Grid Grid.Row="1" Style="{StaticResource ParentGridStyle}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="128" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Label Grid.Row="1">Customer:</Label>
                                        <ComboBox x:Name="CustomerName_CB" ItemsSource="{Binding Customers, Mode=TwoWay}" Grid.Row="1" Grid.Column="1" Margin="0,0,64,0" DisplayMemberPath="FullName" SelectedValuePath="ID" SelectedValue="{Binding TempProject.CustomerID, Mode=TwoWay}" Loaded="CustomerCombo_Loaded" IsEditable="False" Validation.ErrorTemplate="{x:Null}"></ComboBox>
                                    </Grid>
                                    <Grid Grid.Row="2" Style="{StaticResource ParentGridStyle}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="128" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Label>Target Date:</Label>
                                        <Grid Grid.Column="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*" />
                                                <ColumnDefinition Width="2*" />
                                            </Grid.ColumnDefinitions>
                                            <DatePicker SelectedDate="{Binding TempProject.TargetDate, Mode=TwoWay, Converter={StaticResource DateTimeConverter}}"  HorizontalAlignment="Left"></DatePicker>
                                            <Grid Grid.Column="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1*" />
                                                    <ColumnDefinition Width="2*" />
                                                </Grid.ColumnDefinitions>
                                                <Label>Completed:</Label>
                                                <CheckBox IsChecked="{Binding TempProject.Complete, Mode=TwoWay}" x:Name="Complete_CH" Grid.Column="1" VerticalAlignment="Center"></CheckBox>
                                            </Grid>
                                        </Grid>
                                    </Grid>
                                    <Grid Grid.Row="3" Style="{StaticResource ParentGridStyle}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="128" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Label >Date Completed:</Label>
                                        <DatePicker x:Name="Complete_DP" SelectedDate="{Binding TempProject.DateCompleted, Mode=TwoWay, Converter={StaticResource DateTimeConverter}}" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left"></DatePicker>
                                    </Grid>
                                    <Grid Grid.Row="4" Style="{StaticResource ParentGridStyle}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="128" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Label>Payment:</Label>
                                        <Grid Grid.Column="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="4*" />
                                                <ColumnDefinition Width="3*" />
                                            </Grid.ColumnDefinitions>
                                            <ComboBox x:Name="Payment_CB">
                                                <ComboBox.ItemContainerStyle>
                                                    <Style TargetType="{x:Type ComboBoxItem}">
                                                        <EventSetter Event="PreviewMouseLeftButtonUp" Handler="SelectPaymentComboBoxItem" />
                                                    </Style>
                                                </ComboBox.ItemContainerStyle>
                                                <ComboBoxItem>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <CheckBox IsChecked="{Binding TempProject.BackgroundChk, Mode=TwoWay}" Margin="0,0,10,0" PreviewMouseDown="CheckBox_PreviewClick" />
                                                        <TextBlock Text="Background Check" Grid.Column="1" />
                                                    </Grid>
                                                </ComboBoxItem>
                                                <ComboBoxItem>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <CheckBox IsChecked="{Binding TempProject.CertPayRoll, Mode=TwoWay}" Margin="0,0,10,0" PreviewMouseDown="CheckBox_PreviewClick" />
                                                        <TextBlock Text="Cert Pay Reqd" Grid.Column="1" />
                                                    </Grid>
                                                </ComboBoxItem>
                                                <ComboBoxItem>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <CheckBox IsChecked="{Binding TempProject.Cip, Mode=TwoWay}" Margin="0,0,10,0" PreviewMouseDown="CheckBox_PreviewClick" />
                                                        <TextBlock Text="CIP Project" Grid.Column="1" />
                                                    </Grid>
                                                </ComboBoxItem>
                                                <ComboBoxItem>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <CheckBox IsChecked="{Binding TempProject.C3, Mode=TwoWay}" Margin="0,0,10,0" PreviewMouseDown="CheckBox_PreviewClick" />
                                                        <TextBlock Text="C3 Project" Grid.Column="1" />
                                                    </Grid>
                                                </ComboBoxItem>
                                                <ComboBoxItem>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <CheckBox IsChecked="{Binding TempProject.PnpBond, Mode=TwoWay}" Margin="0,0,10,0" PreviewMouseDown="CheckBox_PreviewClick" />
                                                        <TextBlock Text="PP Bond" Grid.Column="1" />
                                                    </Grid>
                                                </ComboBoxItem>
                                                <ComboBoxItem>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <CheckBox IsChecked="{Binding TempProject.GapBid, Mode=TwoWay}" Margin="0,0,10,0" PreviewMouseDown="CheckBox_PreviewClick" />
                                                        <TextBlock Text="GAP Bid Incl" Grid.Column="1" />
                                                    </Grid>
                                                </ComboBoxItem>
                                                <ComboBoxItem>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <CheckBox IsChecked="{Binding TempProject.GapEst, Mode=TwoWay}" Margin="0,0,10,0" PreviewMouseDown="CheckBox_PreviewClick" />
                                                        <TextBlock Text="GAP Est Incl" Grid.Column="1" />
                                                    </Grid>
                                                </ComboBoxItem>
                                                <ComboBoxItem>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <CheckBox IsChecked="{Binding TempProject.LcpTracker, Mode=TwoWay}" Margin="0,0,10,0" PreviewMouseDown="CheckBox_PreviewClick" />
                                                        <TextBlock Text="LCP Tracker" Grid.Column="1" />
                                                    </Grid>
                                                </ComboBoxItem>
                                                <ComboBoxItem>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <CheckBox IsChecked="{Binding TempProject.PayReqd, Mode=TwoWay}" Margin="0,0,10,0" PreviewMouseDown="CheckBox_PreviewClick" />
                                                        <TextBlock Text="Down Payment" Grid.Column="1" />
                                                    </Grid>
                                                </ComboBoxItem>
                                            </ComboBox>
                                            <Grid Grid.Column="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1*" />
                                                    <ColumnDefinition Width="1*" />
                                                </Grid.ColumnDefinitions>
                                                <Label>Billing Date:</Label>
                                                <TextBox x:Name="Billing_TB" Text="{Binding TempProject.BillingDate, Mode=TwoWay}" Grid.Column="1" Width="40" HorizontalAlignment="Left" PreviewTextInput="ValidateNumber"></TextBox>
                                            </Grid>
                                        </Grid>
                                    </Grid>
                                    <Grid Grid.Row="5" Style="{StaticResource ParentGridStyle}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="128" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Label Grid.Row="6" >Payment Note:</Label>
                                        <Grid Grid.Row="6" Grid.Column="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="4*" />
                                                <ColumnDefinition Width="3*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBox x:Name="PaymentNote_TB" VerticalContentAlignment="Top" Text="{Binding TempProject.PayReqdNote, Mode=TwoWay}" AcceptsReturn="True" ScrollViewer.VerticalScrollBarVisibility="Auto" />
                                            <Grid Grid.Column="1">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="*" />
                                                </Grid.RowDefinitions>
                                                <Grid Style="{StaticResource ParentGridStyle}">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="1*" />
                                                        <ColumnDefinition Width="1*" />
                                                    </Grid.ColumnDefinitions>
                                                    <Label>Master Contract:</Label>
                                                    <ComboBox x:Name="MasterContract_CB" ItemsSource="{Binding MasterContracts}" SelectedValue="{Binding TempProject.MasterContract, Mode=TwoWay}" Grid.Column="1" />
                                                </Grid>
                                                <Grid Grid.Row="1" Style="{StaticResource ParentGridStyle}">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="1*" />
                                                        <ColumnDefinition Width="1*" />
                                                    </Grid.ColumnDefinitions>
                                                    <Label>Crew:</Label>
                                                    <ComboBox x:Name="Crew_CB" ItemsSource="{Binding NewCrews}" DisplayMemberPath="CrewName" SelectedValuePath="ID" SelectedValue="{Binding TempProject.CrewID, Mode=TwoWay}" Grid.Column="1" IsEditable="False" Validation.ErrorTemplate="{x:Null}" Loaded="CrewCombo_Loaded" Tag="ProjectCrew" />
                                                </Grid>
                                            </Grid>
                                        </Grid>
                                    </Grid>
                                    <Grid Grid.Row="6" Style="{StaticResource ParentGridStyle}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="128" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Label>Additional Info:</Label>
                                        <Grid Grid.Column="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="4*" />
                                                <ColumnDefinition Width="3*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBox Text="{Binding TempProject.AddtlInfo, Mode=TwoWay}" VerticalContentAlignment="Top" AcceptsReturn="True" ScrollViewer.VerticalScrollBarVisibility="Auto" />
                                        </Grid>
                                    </Grid>
                                </Grid>
                                <Grid Grid.Column="1" Margin="4">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*" />
                                                <ColumnDefinition Width="1*" />
                                            </Grid.ColumnDefinitions>
                                            <Grid Style="{StaticResource ParentGridStyle}">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Label>Job No:</Label>
                                                <TextBox x:Name="JobNo_TB" Text="{Binding TempProject.JobNo, Mode=TwoWay}" Grid.Column="1"/>
                                            </Grid>
                                            <Grid Grid.Column="1" Style="{StaticResource ParentGridStyle}">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Label>On Hold?</Label>
                                                <CheckBox x:Name="Hold_CH" IsChecked="{Binding TempProject.OnHold}" Grid.Column="1" VerticalAlignment="Center"></CheckBox>
                                            </Grid>
                                        </Grid>
                                        <GroupBox Grid.Row="1" Header="Job Site:" Padding="40, 10, 40, 10">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="*" />
                                                </Grid.RowDefinitions>
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="*" />
                                                    </Grid.RowDefinitions>
                                                    <Grid Style="{StaticResource ParentGridStyle}">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="60" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <Label>Address:</Label>
                                                        <TextBox x:Name="Address_TB" Text="{Binding TempProject.Address, Mode=TwoWay}" Grid.Column="1" />
                                                    </Grid>
                                                    <Grid Grid.Row="1" Style="{StaticResource ParentGridStyle}">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="60" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <Label Grid.Row="1">City:</Label>
                                                        <TextBox x:Name="City_TB" Text="{Binding TempProject.City, Mode=TwoWay}" Grid.Column="1" />
                                                    </Grid>
                                                </Grid>
                                                <Grid Grid.Row="1">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="1*" />
                                                        <ColumnDefinition Width="1*" />
                                                    </Grid.ColumnDefinitions>
                                                    <Grid Margin="0,4,0,4">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="60" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <Label>State:</Label>
                                                        <TextBox x:Name="State_TB" Text="{Binding TempProject.State, Mode=TwoWay}" Grid.Column="1" MaxLength="2" />
                                                    </Grid>
                                                    <Grid Grid.Column="1" Margin="0,4,0,4">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="60" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <Label>Zip:</Label>
                                                        <TextBox x:Name="Zip_TB" Text="{Binding TempProject.Zip}" Grid.Column="1" />
                                                    </Grid>
                                                </Grid>
                                            </Grid>
                                        </GroupBox>
                                        <GroupBox Grid.Row="3" Header="Current Contract:" Padding="40, 10, 40, 10">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>
                                                <Grid Style="{StaticResource ParentGridStyle}">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="3*" />
