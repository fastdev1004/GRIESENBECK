<Page x:Class="WpfApp.ProjectView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp"
      xmlns:col="clr-namespace:System.Collections;assembly=mscorlib"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1700"
      Title="ViewProject">
    <Page.Resources>
        <Style x:Name="operation" TargetType="Button">
            <Setter Property="Width" Value="40" />
            <Setter Property="Height" Value="20" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="#14305F" />
            <Setter Property="FontWeight" Value="Bold" />
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5, 5, 0, 0"></Setter>
                </Style>
            </Style.Resources>
        </Style>
        <Style x:Key="GridViewColumnHeaderStyle1" TargetType="{x:Type GridViewColumnHeader}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type GridViewColumnHeader}">
                        <Border BorderThickness="0,0,0,0" BorderBrush="Black" Background="#40859C">
                            <TextBlock x:Name="ContentHeader" Text="{TemplateBinding Content}" Padding="5,5,5,5" Width="{TemplateBinding Width}" TextAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="14" />
        </Style>
        <Style x:Key="GridViewColumnHeaderStyle2" TargetType="{x:Type GridViewColumnHeader}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type GridViewColumnHeader}">
                        <Border BorderThickness="0,0,0,0" BorderBrush="Black" Background="#2A7E2A">
                            <TextBlock x:Name="ContentHeader" Text="{TemplateBinding Content}" Padding="5,5,5,5" Width="{TemplateBinding Width}" TextAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="14" />
        </Style>
        <Style x:Key="GridViewColumnHeaderStyle3" TargetType="{x:Type GridViewColumnHeader}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type GridViewColumnHeader}">
                        <Border BorderThickness="0,0,0,0" BorderBrush="Black" Background="#BD623D">
                            <TextBlock x:Name="ContentHeader" Text="{TemplateBinding Content}" Padding="5,5,5,5" Width="{TemplateBinding Width}" TextAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="14" />
        </Style>
        <Style x:Key="GridViewColumnHeaderStyle4" TargetType="{x:Type GridViewColumnHeader}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type GridViewColumnHeader}">
                        <Border BorderThickness="0,0,0,0" BorderBrush="Black" Background="#D79619">
                            <TextBlock x:Name="ContentHeader" Text="{TemplateBinding Content}" Padding="5,5,5,5" Width="{TemplateBinding Width}" TextAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="14" />
        </Style>
        <Style TargetType="{x:Type Label}">
            <Setter Property="HorizontalAlignment" Value="Right" />
        </Style>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid>
            <Border BorderThickness="0 0 0 4" BorderBrush="#B6302D">
                <Grid Background="#14305F">
                    <Button Click="goback" Width="40" Height="20" HorizontalAlignment="Left" Margin="10,0,0,0">Back</Button>
                    <TextBlock Margin="80, 0,0,0" Text="Projects" FontSize="32" Foreground="White" VerticalAlignment="Center">
                    </TextBlock>
                </Grid>
            </Border>
        </Grid>
        <Grid Grid.Row="1" Margin="10, 24, 10, 10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <WrapPanel>
                    <Label>Select Project:</Label>
                    <ComboBox IsEditable="True" Width="400" Name="projectContacts" ItemsSource="{Binding Projects}" DisplayMemberPath="Product_Customer_Name" SelectedValuePath="ID" SelectedValue="{Binding SelectedProjectId, Mode=TwoWay}" SelectionChanged="SelectProjectItem"></ComboBox>
                </WrapPanel>
                <WrapPanel Name="Operation" Grid.Column="1" HorizontalAlignment="Left">
                    <Button Content="New" />
                    <Button Content="Print" Margin="8,0,0,0" />
                    <Button Content="Email" Margin="8,0,0,0" />
                </WrapPanel>
            </Grid>
        </Grid>
        <Grid Grid.Row="2">
            <TabControl Margin="10" BorderBrush="Gainsboro">
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border Name="Border" BorderThickness="1,1,1,0" BorderBrush="Gainsboro" CornerRadius="4,4,0,0" Margin="2,0">
                                        <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Margin="10,2"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="LightSkyBlue" />
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="False">
                                            <Setter TargetName="Border" Property="Background" Value="GhostWhite" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>
                <TabItem Header="Project">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="32*"/>
                                <ColumnDefinition Width="955*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid Grid.ColumnSpan="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="128" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Label Margin="0,4,0,4">Project Name:</Label>
                                    <TextBox Text="{Binding ProjectName, Mode=TwoWay}" Grid.Column="1" Margin="1,4,63,4" />
                                    <Label Grid.Row="1" Margin="0,4,0,4">Customer:</Label>
                                    <ComboBox ItemsSource="{Binding Customers}" Grid.Row="1" Grid.Column="1" Margin="0,4,64,4" DisplayMemberPath="Customer_Name_Address" SelectedValuePath="ID" SelectedValue="{Binding SelectedCustomerId}"></ComboBox>

                                    <Label Grid.Row="3" Margin="0,4,0,4">Target Date:</Label>
                                    <Grid Grid.Row="3" Grid.Column="1" Margin="0,4,0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="2*" />
                                        </Grid.ColumnDefinitions>
                                        <DatePicker SelectedDate="{Binding TargetDate}"  HorizontalAlignment="Left"></DatePicker>
                                        <Grid Grid.Column="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*" />
                                                <ColumnDefinition Width="2*" />
                                            </Grid.ColumnDefinitions>
                                            <Label>Completed:</Label>
                                            <CheckBox Grid.Column="1" VerticalAlignment="Center"></CheckBox>
                                        </Grid>
                                    </Grid>
                                    <Label Grid.Row="4" Margin="0,4,0,4" >Date Completed:</Label>
                                    <DatePicker SelectedDate="{Binding CompletedDate}" Grid.Row="4" Grid.Column="1" Margin="0,4,0,4" HorizontalAlignment="Left"></DatePicker>
                                    <Label Grid.Row="5" Margin="0,4,0,4">Payment:</Label>
                                    <Grid Grid.Row="5" Grid.Column="1"  Margin="0,4,0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="4*" />
                                            <ColumnDefinition Width="3*" />
                                        </Grid.ColumnDefinitions>
                                        <ComboBox ItemsSource="{Binding Payments, Mode=TwoWay}" x:Name="PaymentComboBox" >
                                            <ComboBox.ItemContainerStyle>
                                                <Style TargetType="{x:Type ComboBoxItem}">
                                                    <EventSetter Event="PreviewMouseLeftButtonUp" Handler="SelectPaymentComboBoxItem" />
                                                </Style>
                                            </ComboBox.ItemContainerStyle>
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <CheckBox PreviewMouseLeftButtonDown="SelectPaymentCheckBox" IsChecked="{Binding IsChecked, Mode=TwoWay}" Margin="0,0,4,0"/>
                                                        <TextBlock Text="{Binding Name}"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                        <Grid Grid.Column="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*" />
                                                <ColumnDefinition Width="1*" />
                                            </Grid.ColumnDefinitions>
                                            <Label>Billing Date:</Label>
                                            <TextBox Text="{Binding BillingDate}" Grid.Column="1" Width="20" HorizontalAlignment="Left" ></TextBox>
                                        </Grid>
                                    </Grid>
                                    <Label Grid.Row="6" Margin="0,4,0,4" >Payment Note:</Label>
                                    <Grid Grid.Row="6" Grid.Column="1"  Margin="0,4,0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="4*" />
                                            <ColumnDefinition Width="3*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBox Text="{Binding PaymentNote, Mode=TwoWay}" AcceptsReturn="True" ScrollViewer.VerticalScrollBarVisibility="Auto" />
                                        <Grid Grid.Column="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*" />
                                                <ColumnDefinition Width="1*" />
                                            </Grid.ColumnDefinitions>
                                            <Label Margin="0,4,0,4" >Master Contract:</Label>
                                            <ComboBox SelectedIndex="{Binding SelectedMCID}" Grid.Column="1" Margin="0,4,4,4">
                                                <ComboBoxItem>Yes</ComboBoxItem>
                                                <ComboBoxItem>No</ComboBoxItem>
                                            </ComboBox>
                                            <Label Margin="0,4,0,4" Grid.Row="1" >Crew:</Label>
                                            <ComboBox ItemsSource="{Binding Crews}" DisplayMemberPath="CrewName" SelectedValuePath="ID" SelectedValue="{Binding SelectedCrewID}" Grid.Column="1"  Grid.Row="1" Margin="0,4,4,4" />
                                        </Grid>
                                    </Grid>
                                </Grid>
                                <Grid Grid.Column="1">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*" />
                                                <ColumnDefinition Width="1*" />
                                            </Grid.ColumnDefinitions>
                                            <Grid Margin="0,4,0,4">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Label>Job No:</Label>
                                                <TextBox Text="{Binding JobNo, Mode=TwoWay}" Grid.Column="1"/>
                                            </Grid>
                                            <Grid Grid.Column="1" Margin="0,4,0,4">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Label>On Hold?</Label>
                                                <CheckBox IsChecked="{Binding OnHold}" Grid.Column="1" VerticalAlignment="Center"></CheckBox>
                                            </Grid>
                                        </Grid>
                                        <GroupBox Grid.Row="1" Header="Job Site:" Padding="40, 10, 40, 10">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="*" />
                                                </Grid.RowDefinitions>
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="*" />
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="60" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>
                                                    <Label Margin="0,4,0,4">Address:</Label>
                                                    <TextBox Text="{Binding Address}" Grid.Column="1" Margin="0,4,0,4" />
                                                    <Label Grid.Row="1" Margin="0,4,0,4">City:</Label>
                                                    <TextBox Text="{Binding City}" Grid.Row="1" Grid.Column="1" Margin="0,4,0,4" />
                                                </Grid>
                                                <Grid Grid.Row="1">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="1*" />
                                                        <ColumnDefinition Width="1*" />
                                                    </Grid.ColumnDefinitions>
                                                    <Grid Margin="0,4,0,4">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="60" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <Label>State:</Label>
                                                        <TextBox Text="{Binding State}" Grid.Column="1" />
                                                    </Grid>
                                                    <Grid Grid.Column="1" Margin="0,4,0,4">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="60" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <Label>Zip:</Label>
                                                        <TextBox Text="{Binding Zip}" Grid.Column="1" />
                                                    </Grid>
                                                </Grid>
                                            </Grid>
                                        </GroupBox>
                                        <GroupBox Grid.Row="3" Header="Current Contract:" Padding="40, 10, 40, 10">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="*" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="3*" />
                                                    <ColumnDefinition Width="2*" />
                                                </Grid.ColumnDefinitions>
                                                <Label Margin="0,4,0,4">Original Contract Amt:</Label>
                                                <Label Content="{Binding OrigTaxAmt}" Grid.Column="1" Margin="0,4,0,4"></Label>
                                                <Label Grid.Row="1" Margin="0,4,0,4">Total Change Orders:</Label>
                                                <Border Grid.Row="1" Grid.Column="1" BorderThickness="0,0,0,1" BorderBrush="Black">
                                                    <Label Content="{Binding OrigProfit}" Margin="0,4,0,4"></Label>
                                                </Border>
                                                <Label Grid.Row="2" Margin="0,4,0,4">Total Contract Amt:</Label>
                                                <Label Content="{Binding OrigTotalMatCost}" Grid.Row="2" Grid.Column="1" Margin="0,4,0,4"></Label>
                                            </Grid>
                                        </GroupBox>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Grid>
                        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                            <Grid Margin="0,4,0,10" Background="Yellow">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid Margin="10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <TextBlock>7/13/2021 12:42:52 PM</TextBlock>
                                        <TextBox Grid.Row="1" AcceptsReturn="True" ScrollViewer.VerticalScrollBarVisibility="Auto"  Height="40"/>
                                    </Grid>
                                    <Grid Grid.Row="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <TextBlock>7/13/2021 12:42:52 PM</TextBlock>
                                        <TextBox Grid.Row="1" AcceptsReturn="True" ScrollViewer.VerticalScrollBarVisibility="Auto"  Height="40"/>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </ScrollViewer>
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid Background="#2F528F" Height="30" Margin="2, 1, 2, 1">
                                <Label Content="Project Contacts" HorizontalAlignment="Left" Foreground="white" Margin="32,0,0,0"/>
                            </Grid>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <Grid Margin="4, 0, 0, 0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Label Content="Project Manager" HorizontalAlignment="Left" />
                                        <Grid Grid.Row="1" x:Name="PMGrid">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <ComboBox ItemsSource="{Binding ProjectManagers}" DisplayMemberPath="PMName" SelectedValuePath="ID" IsEditable="True" SelectedValue="{Binding SelectedPMId, Mode=TwoWay}" />
                                        </Grid>
                                    </Grid>
                                </ScrollViewer>
                                <Grid Grid.Column="1" Margin="4, 0, 0, 0">
                                    <Label Content="Superintendent" HorizontalAlignment="Left" />
                                </Grid>
                                <Grid Grid.Column="2" Grid.Row="1">
                                    <Grid Margin="0, 30, 0, 0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*" />
                                                <ColumnDefinition Width="3*" />
                                            </Grid.ColumnDefinitions>
                                            <Label Margin="0,4,0,4">Estimator:</Label>
                                            <ComboBox ItemsSource="{Binding Estimators}" Grid.Row="1" Grid.Column="1" Margin="0,4,16,4" DisplayMemberPath="EstimatorName" SelectedValuePath="ID" SelectedValue="{Binding SelectedEstimatorID}" />
                                        </Grid>
                                        <Grid Grid.Row="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*" />
                                                <ColumnDefinition Width="3*" />
                                            </Grid.ColumnDefinitions>
                                            <Label Margin="0,4,0,4">Project Coord:</Label>
                                            <ComboBox ItemsSource="{Binding PCs}" Grid.Row="1" Grid.Column="1" Margin="0,4,16,4" DisplayMemberPath="PCName" SelectedValuePath="ID" SelectedValue="{Binding SelectedProjectCoordID}" />
                                        </Grid>
                                        <Grid Grid.Row="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*" />
                                                <ColumnDefinition Width="3*" />
                                            </Grid.ColumnDefinitions>
                                            <Label Margin="0,4,0,4">Arch Rep:</Label>
                                            <ComboBox ItemsSource="{Binding ArchReps}" Grid.Row="1" Grid.Column="1" Margin="0,4,16,4" DisplayMemberPath="ArchRepName" SelectedValuePath="ID" SelectedValue="{Binding SelectedArchRepID}" />
                                        </Grid>
                                        <Grid Grid.Row="3">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*" />
                                                <ColumnDefinition Width="3*" />
                                            </Grid.ColumnDefinitions>
                                            <Label Margin="0,4,0,4">Submittal Contact:</Label>
                                            <ComboBox ItemsSource="{Binding CustomerContacts}" Grid.Row="1" Grid.Column="1" Margin="0,4,16,4" DisplayMemberPath="CCName" SelectedValuePath="ID" SelectedValue="{Binding SelectedCCID}" />
                                        </Grid>
                                        <Grid Grid.Row="4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*" />
                                                <ColumnDefinition Width="3*" />
                                            </Grid.ColumnDefinitions>
                                            <Label Margin="0,4,0,4">Architect:</Label>
                                            <ComboBox ItemsSource="{Binding Architects}" Grid.Row="1" Grid.Column="1" Margin="0,4,16,4" DisplayMemberPath="ArchCompany" SelectedValuePath="ID" SelectedValue="{Binding SelectedArchitectID}" />
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Grid>
                        <Grid Grid.Row="1" Grid.Column="1">
                            <ListView>
                                <ListView.Resources>
                                    <Style TargetType="ComboBox">
                                        <Setter Property="Width" Value="250"/>
                                    </Style>
                                </ListView.Resources>
                                <ListView.View>
                                    <GridView AllowsColumnReorder="true" ColumnHeaderContainerStyle="{StaticResource GridViewColumnHeaderStyle4}"  ColumnHeaderToolTip="Employee Information">
                                        <GridViewColumn Header="Description">
                                            <!--<GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>-->
                                        </GridViewColumn>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem Header="SOV">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                        </Grid.RowDefinitions>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="6*" />
                                <ColumnDefinition Width="4*" />
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <Grid Background="#648278" Height="30" Margin="2, 1, 2, 1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Content="Project Contacts" Foreground="white" HorizontalAlignment="Center" />
                                    <Label Grid.Column="1" Content="Change Order" Foreground="white" HorizontalAlignment="Center" />
                                    <Label Grid.Column="2" Content="Item" Foreground="white" HorizontalAlignment="Center" />
                                    <Label Grid.Column="3" Content="Material Only" Foreground="white" HorizontalAlignment="Center" />
                                </Grid>
                                <Grid x:Name="SOVGrid1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3*"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="4*"/>
                                            <ColumnDefinition Width="2*"/>
                                        </Grid.ColumnDefinitions>
                                        <ComboBox Margin="4,1,4,1" IsEditable="True" />
                                        <ComboBox Grid.Column="1" Margin="4,1,4,1" IsEditable="True" />
                                        <Border Grid.Column="2" Margin="4,1,4,1" BorderBrush="black" BorderThickness="0,0,0,1">
                                            <TextBox />
                                        </Border>
                                        <CheckBox Grid.Column="3" HorizontalAlignment="Center" />
                                    </Grid>
                                </Grid>
                            </StackPanel>
                        </Grid>
                        <Grid Grid.Row="1">
                            <TabControl BorderBrush="Gainsboro">
                                <TabControl.Resources>
                                    <Style TargetType="TabItem">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TabItem">
                                                    <Border Name="Border" BorderThickness="1,1,1,0" BorderBrush="Gainsboro" CornerRadius="4,4,0,0" Margin="2,0">
                                                        <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Margin="10,2"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter TargetName="Border" Property="Background" Value="LightSkyBlue" />
                                                        </Trigger>
                                                        <Trigger Property="IsSelected" Value="False">
                                                            <Setter TargetName="Border" Property="Background" Value="GhostWhite" />
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TabControl.Resources>
                                <TabItem Header="Materials">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Grid Background="#BD623D" Height="30" Margin="2, 1, 2, 1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="1*"/>
