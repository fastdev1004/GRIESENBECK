                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="1*" />
                                                        <RowDefinition Height="1*" />
                                                    </Grid.RowDefinitions>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="2*" />
                                                            <ColumnDefinition Width="1*" />
                                                            <ColumnDefinition Width="2*" />
                                                            <ColumnDefinition Width="2*" />
                                                        </Grid.ColumnDefinitions>
                                                        <DatePicker SelectedDate="{Binding CoDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource DateTimeConverter}}" />
                                                        <TextBox Grid.Column="1" TextAlignment="Center" Text="{Binding CoItemNo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalContentAlignment="Center" PreviewTextInput="ValidateNumber" />
                                                        <ComboBox Grid.Column="2" ItemsSource="{Binding DataContext.ApprDens, RelativeSource={RelativeSource AncestorType=local:ProjectView}}" DisplayMemberPath="ApprDenValue" SelectedValuePath="ApprDenValue" SelectedValue="{Binding CoAppDen, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEditable="False" VerticalContentAlignment="Center">
                                                        </ComboBox>
                                                        <DatePicker Grid.Column="3" SelectedDate="{Binding CoDateAppDen, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource DateTimeConverter}}" VerticalContentAlignment="Center"  />
                                                    </Grid>
                                                    <Grid Grid.Row="1">
                                                        <TextBox Height="25" Text="{Binding CoComment, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalContentAlignment="Center" />
                                                    </Grid>
                                                </Grid>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem Header="CIPs">
                    <Grid Margin="10" x:Name="CIPGrid" HorizontalAlignment="Left" Width="1000">
                        <DataGrid x:Name="CIP_DataGrid" ItemsSource="{Binding FetchProjectCIPs, Mode=TwoWay}" GridLinesVisibility="None" AutoGenerateColumns="False" HeadersVisibility="None" BorderThickness="0" Background="White" AlternatingRowBackground="LightGray" CanUserAddRows="False" ContextMenu="{StaticResource CipContextMenu}" RowStyle="{StaticResource CipRowStyle}">
                            <DataGrid.Resources>
                                <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource GridColumnHeaderBase}">
                                    <Setter Property="Background" Value="#4BACC6" />
                                </Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="TextWrapping" Value="Wrap" />
                                </Style>
                                <Style TargetType="Label">
                                    <Setter Property="HorizontalAlignment" Value="Right" />
                                </Style>
                                <Style TargetType="DatePicker">
                                    <Setter Property="Width" Value="110" />
                                    <Setter Property="HorizontalAlignment" Value="Left" />
                                    <Setter Property="BorderThickness" Value="0" />
                                </Style>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Height" Value="Auto" />
                                    <Setter Property="BorderThickness" Value="0" />
                                    <Setter Property="Margin" Value="4" />
                                </Style>
                            </DataGrid.Resources>
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Header="Project CIPs" Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid Margin="10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1*"/>
                                                    <ColumnDefinition Width="1*" />
                                                    <ColumnDefinition Width="1*" />
                                                </Grid.ColumnDefinitions>
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>
                                                    <Grid Style="{StaticResource ParentGridStyle}">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="3*" />
                                                            <ColumnDefinition Width="2*" />
                                                        </Grid.ColumnDefinitions>
                                                        <Label Content="GAP Job #" />
                                                        <TextBox Grid.Column="1" Text="{Binding DataContext.TempProject.JobNo, Mode=TwoWay, RelativeSource={RelativeSource AncestorType=local:ProjectView}}" />
                                                    </Grid>
                                                    <Grid Grid.Row="1" Style="{StaticResource ParentGridStyle}">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="3*" />
                                                            <ColumnDefinition Width="2*" />
                                                        </Grid.ColumnDefinitions>
                                                        <Label Content="CIP Type" />
                                                        <ComboBox Grid.Column="1" ItemsSource="{Binding DataContext.CIPTypes, RelativeSource={RelativeSource AncestorType=local:ProjectView}}" DisplayMemberPath="OptTxtVal" SelectedValuePath="OptTxtVal" IsEditable="False" SelectedValue="{Binding CipType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                    </Grid>
                                                    <Grid Grid.Row="2" Style="{StaticResource ParentGridStyle}">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="3*" />
                                                            <ColumnDefinition Width="2*" />
                                                        </Grid.ColumnDefinitions>
                                                        <Label Content="Target Date" />
                                                        <DatePicker Grid.Column="1" SelectedDate="{Binding TargetDate, Mode=TwoWay, Converter={StaticResource DateTimeConverter}, UpdateSourceTrigger=PropertyChanged}" />
                                                    </Grid>
                                                    <Grid Grid.Row="3" Style="{StaticResource ParentGridStyle}">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="3*" />
                                                            <ColumnDefinition Width="2*" />
                                                        </Grid.ColumnDefinitions>
                                                        <Label Content="Original Contract Amount" />
                                                        <TextBox Grid.Column="1" Text="{Binding OriginalContractAmt, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource IntToDollarConverter}}" PreviewTextInput="ValidateNumber" />
                                                    </Grid>
                                                    <Grid Grid.Row="4" Style="{StaticResource ParentGridStyle}">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="3*" />
                                                            <ColumnDefinition Width="2*" />
                                                        </Grid.ColumnDefinitions>
                                                        <Label Content="Final Contract Amount" />
                                                        <TextBox Grid.Column="1" Text="{Binding FinalContractAmt, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource IntToDollarConverter}}" PreviewTextInput="ValidateNumber" />
                                                    </Grid>
                                                </Grid>
                                                <Grid Grid.Column="1">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>
                                                    <Grid Style="{StaticResource ParentGridStyle}">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="3*" />
                                                            <ColumnDefinition Width="2*" />
                                                        </Grid.ColumnDefinitions>
                                                        <Label Content="Forms Received" />
                                                        <DatePicker Grid.Column="1" SelectedDate="{Binding FormsRecD, Mode=TwoWay, Converter={StaticResource DateTimeConverter}, UpdateSourceTrigger=PropertyChanged}" />
                                                    </Grid>
                                                    <Grid Grid.Row="1" Style="{StaticResource ParentGridStyle}">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="3*" />
                                                            <ColumnDefinition Width="2*" />
                                                        </Grid.ColumnDefinitions>
                                                        <Label Content="Forms Sent" />
                                                        <DatePicker Grid.Column="1" SelectedDate="{Binding FormsSent, Mode=TwoWay, Converter={StaticResource DateTimeConverter}, UpdateSourceTrigger=PropertyChanged}" />
                                                    </Grid>
                                                    <Grid  Grid.Row="2" Style="{StaticResource ParentGridStyle}">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="3*" />
                                                            <ColumnDefinition Width="2*" />
                                                        </Grid.ColumnDefinitions>
                                                        <Label Content="Certificate Received" />
                                                        <DatePicker Grid.Column="1" SelectedDate="{Binding CertRecD, Mode=TwoWay, Converter={StaticResource DateTimeConverter}, UpdateSourceTrigger=PropertyChanged}" />
                                                    </Grid>
                                                    <Grid Grid.Row="3" Style="{StaticResource ParentGridStyle}">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="3*" />
                                                            <ColumnDefinition Width="2*" />
                                                        </Grid.ColumnDefinitions>
                                                        <Label Content="Exemption Approved" />
                                                        <Grid Grid.Column="1" Margin="0">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="20" />
                                                                <ColumnDefinition Width="*" />
                                                            </Grid.ColumnDefinitions>
                                                            <CheckBox IsChecked="{Binding ExemptionApproved, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                                            <DatePicker Grid.Column="1" SelectedDate="{Binding ExemptionAppDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource DateTimeConverter}}" />
                                                        </Grid>
                                                    </Grid>
                                                    <Grid Grid.Row="4" Style="{StaticResource ParentGridStyle}">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="3*" />
                                                            <ColumnDefinition Width="2*" />
                                                        </Grid.ColumnDefinitions>
                                                        <Label Content="Crew Enrolled" />
                                                        <ComboBox Grid.Column="1" ItemsSource="{Binding DataContext.CrewEnrolls, RelativeSource={RelativeSource AncestorType=local:ProjectView}}" DisplayMemberPath="CrewEnrollValue" SelectedValuePath="CrewEnrollValue" IsEditable="False" SelectedValue="{Binding CrewEnrolled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                    </Grid>
                                                </Grid>
                                                <Grid Grid.Column="2">
                                                    <Grid Style="{StaticResource ParentGridStyle}">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <Label Content="Notes" />
                                                        <TextBox Grid.Column="1" Text="{Binding Notes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="160" AcceptsReturn="True" ScrollViewer.VerticalScrollBarVisibility="Auto" />
                                                    </Grid>
                                                </Grid>
                                            </Grid>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Page>
