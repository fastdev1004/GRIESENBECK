<Page x:Class="WpfApp.ProjectView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp"
      xmlns:col="clr-namespace:System.Collections;assembly=mscorlib"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1700"
      Title="ViewProject">
    <Page.Resources>
        <!--<converter:SelectedValueToIntConverter x:Key="SelectedValueToIntConverter" />-->
        <Style x:Name="operation" TargetType="Button">
            <Setter Property="Width" Value="Auto" />
            <Setter Property="Height" Value="20" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="#14305F" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="4,0" />
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="3"></Setter>
                </Style>
            </Style.Resources>
        </Style>
        <Style x:Key="GridColumnHeaderBase" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#648278" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Padding" Value="10,0,0,0" />
            <Style.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="TextAlignment" Value="Center" />
                </Style>
            </Style.Resources>
        </Style>
        <Style TargetType="DataGridRow">
            <Setter Property="Height" Value="25" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>
        <Style TargetType="{x:Type DataGridCell}">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="Margin" Value="4,0,4,0" />
            <Style.Resources>
                <Style TargetType="CheckBox">
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Setter Property="HorizontalAlignment" Value="Center" />
                </Style>
            </Style.Resources>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{x:Null}" />
                    <Setter Property="BorderBrush" Value="{x:Null}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid>
            <Border BorderThickness="0 0 0 4" BorderBrush="#B6302D">
                <Grid Background="#14305F">
                    <Button Click="goBack" Width="40" Height="20" HorizontalAlignment="Left" Margin="10,0,0,0">Back</Button>
                    <TextBlock Margin="80, 0,0,0" Text="Projects" FontSize="32" Foreground="White" VerticalAlignment="Center">
                    </TextBlock>
                </Grid>
            </Border>
        </Grid>
        <Grid Grid.Row="1" Margin="10, 24, 10, 10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <WrapPanel>
                    <Label>Select Project:</Label>
                    <ComboBox IsEditable="True" Width="400" Name="projectContacts" ItemsSource="{Binding Projects}" DisplayMemberPath="Product_Customer_Name" SelectedValuePath="ID" SelectedValue="{Binding ProjectID, Mode=TwoWay}" SelectionChanged="SelectProjectItem"  ></ComboBox>
                </WrapPanel>
                <WrapPanel Name="Operation" Grid.Column="1" HorizontalAlignment="Left">
                    <Button Content="New" />
                    <Button Content="Print" Margin="8,0,0,0" />
                    <Button Content="Email" Margin="8,0,0,0" />
                </WrapPanel>
            </Grid>
        </Grid>
        <Grid Grid.Row="2">
            <TabControl Margin="10" BorderBrush="Gainsboro">
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border Name="Border" BorderThickness="1,1,1,0" BorderBrush="Gainsboro" CornerRadius="4,4,0,0" Margin="2,0">
                                        <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Margin="10,2"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="LightSkyBlue" />
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="False">
                                            <Setter TargetName="Border" Property="Background" Value="GhostWhite" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>
                <TabItem Header="Project">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                        </Grid.RowDefinitions>
                        <Grid Margin="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>
                            <Grid>
                                <Grid.Resources>
                                    <Style TargetType="{x:Type Label}">
                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                    </Style>
                                </Grid.Resources>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="128" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Label Margin="0,4,0,4">Project Name:</Label>
                                    <TextBox x:Name="ProjectName_TB" Text="{Binding ProjectName, Mode=TwoWay}" Grid.Column="1" Margin="1,4,63,4" />
                                    <Label Grid.Row="1" Margin="0,4,0,4">Customer:</Label>
                                    <ComboBox x:Name="CustomerName_CB" ItemsSource="{Binding Customers}" Grid.Row="1" Grid.Column="1" Margin="0,4,64,4" DisplayMemberPath="Customer_Name_Address" SelectedValuePath="ID" SelectedValue="{Binding SelectedCustomerId}"></ComboBox>

                                    <Label Grid.Row="3" Margin="0,4,0,4">Target Date:</Label>
                                    <Grid Grid.Row="3" Grid.Column="1" Margin="0,4,0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="2*" />
                                        </Grid.ColumnDefinitions>
                                        <DatePicker x:Name="TargetDate_DP" SelectedDate="{Binding TargetDate}"  HorizontalAlignment="Left"></DatePicker>
                                        <Grid Grid.Column="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*" />
                                                <ColumnDefinition Width="2*" />
                                            </Grid.ColumnDefinitions>
                                            <Label>Completed:</Label>
                                            <CheckBox x:Name="Complete_CH" Grid.Column="1" VerticalAlignment="Center"></CheckBox>
                                        </Grid>
                                    </Grid>
                                    <Label Grid.Row="4" Margin="0,4,0,4" >Date Completed:</Label>
                                    <DatePicker x:Name="Complete_DP" SelectedDate="{Binding CompletedDate}" Grid.Row="4" Grid.Column="1" Margin="0,4,0,4" HorizontalAlignment="Left"></DatePicker>
                                    <Label Grid.Row="5" Margin="0,4,0,4">Payment:</Label>
                                    <Grid Grid.Row="5" Grid.Column="1"  Margin="0,4,0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="4*" />
                                            <ColumnDefinition Width="3*" />
                                        </Grid.ColumnDefinitions>
                                        <ComboBox x:Name="Payment_CB" ItemsSource="{Binding Payments, Mode=TwoWay}">
                                            <ComboBox.ItemContainerStyle>
                                                <Style TargetType="{x:Type ComboBoxItem}">
                                                    <EventSetter Event="PreviewMouseLeftButtonUp" Handler="SelectPaymentComboBoxItem" />
                                                </Style>
                                            </ComboBox.ItemContainerStyle>
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <CheckBox PreviewMouseLeftButtonDown="SelectPaymentCheckBox" IsChecked="{Binding IsChecked, Mode=TwoWay}" Margin="0,0,4,0"/>
                                                        <TextBlock Text="{Binding Name}"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                        <Grid Grid.Column="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*" />
                                                <ColumnDefinition Width="1*" />
                                            </Grid.ColumnDefinitions>
                                            <Label>Billing Date:</Label>
                                            <TextBox x:Name="Billing_TB" Text="{Binding BillingDate}" Grid.Column="1" Width="20" HorizontalAlignment="Left" ></TextBox>
                                        </Grid>
                                    </Grid>
                                    <Label Grid.Row="6" Margin="0,4,0,4" >Payment Note:</Label>
                                    <Grid Grid.Row="6" Grid.Column="1"  Margin="0,4,0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="4*" />
                                            <ColumnDefinition Width="3*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBox x:Name="PaymentNote_TB" Text="{Binding PaymentNote, Mode=TwoWay}" AcceptsReturn="True" ScrollViewer.VerticalScrollBarVisibility="Auto" />
                                        <Grid Grid.Column="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*" />
                                                <ColumnDefinition Width="1*" />
                                            </Grid.ColumnDefinitions>
                                            <Label Margin="0,4,0,4" >Master Contract:</Label>
                                            <ComboBox x:Name="MasterContract_CB" SelectedIndex="{Binding SelectedMCID}" Grid.Column="1" Margin="0,4,4,4">
                                                <ComboBoxItem>Yes</ComboBoxItem>
                                                <ComboBoxItem>No</ComboBoxItem>
                                            </ComboBox>
                                            <Label Margin="0,4,0,4" Grid.Row="1" >Crew:</Label>
                                            <ComboBox x:Name="Crew_CB" ItemsSource="{Binding Crews}" DisplayMemberPath="CrewName" SelectedValuePath="ID" SelectedValue="{Binding SelectedCrewID}" Grid.Column="1"  Grid.Row="1" Margin="0,4,4,4" IsEditable="True" />
                                        </Grid>
                                    </Grid>
                                </Grid>
                                <Grid Grid.Column="1">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*" />
                                                <ColumnDefinition Width="1*" />
                                            </Grid.ColumnDefinitions>
                                            <Grid Margin="0,4,0,4">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Label>Job No:</Label>
                                                <TextBox x:Name="JobNo_TB" Text="{Binding JobNo, Mode=TwoWay}" Grid.Column="1"/>
                                            </Grid>
                                            <Grid Grid.Column="1" Margin="0,4,0,4">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Label>On Hold?</Label>
                                                <CheckBox x:Name="Hold_CH" IsChecked="{Binding OnHold}" Grid.Column="1" VerticalAlignment="Center"></CheckBox>
                                            </Grid>
                                        </Grid>
                                        <GroupBox Grid.Row="1" Header="Job Site:" Padding="40, 10, 40, 10">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="*" />
                                                </Grid.RowDefinitions>
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="*" />
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="60" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>
                                                    <Label Margin="0,4,0,4">Address:</Label>
                                                    <TextBox x:Name="Address_TB" Text="{Binding Address}" Grid.Column="1" Margin="0,4,0,4" />
                                                    <Label Grid.Row="1" Margin="0,4,0,4">City:</Label>
                                                    <TextBox x:Name="City_TB" Text="{Binding City}" Grid.Row="1" Grid.Column="1" Margin="0,4,0,4" />
                                                </Grid>
                                                <Grid Grid.Row="1">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="1*" />
                                                        <ColumnDefinition Width="1*" />
                                                    </Grid.ColumnDefinitions>
                                                    <Grid Margin="0,4,0,4">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="60" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <Label>State:</Label>
                                                        <TextBox x:Name="State_TB" Text="{Binding State}" Grid.Column="1" />
                                                    </Grid>
                                                    <Grid Grid.Column="1" Margin="0,4,0,4">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="60" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <Label>Zip:</Label>
                                                        <TextBox x:Name="Zip_TB" Text="{Binding Zip}" Grid.Column="1" />
                                                    </Grid>
                                                </Grid>
                                            </Grid>
                                        </GroupBox>
                                        <GroupBox Grid.Row="3" Header="Current Contract:" Padding="40, 10, 40, 10">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="*" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="3*" />
                                                    <ColumnDefinition Width="2*" />
                                                </Grid.ColumnDefinitions>
                                                <Label Margin="0,4,0,4">Original Contract Amt:</Label>
                                                <Label x:Name="OrigAmt_LB" Content="{Binding OrigTaxAmt}" Grid.Column="1" Margin="0,4,0,4"></Label>
                                                <Label Grid.Row="1" Margin="0,4,0,4">Total Change Orders:</Label>
                                                <Border Grid.Row="1" Grid.Column="1" BorderThickness="0,0,0,1" BorderBrush="Black">
                                                    <Label x:Name="OrigProfit_LB" Content="{Binding OrigProfit}" Margin="0,4,0,4"></Label>
                                                </Border>
                                                <Label Grid.Row="2" Margin="0,4,0,4">Total Contract Amt:</Label>
                                                <Label x:Name="OrigTotalAmt_LB" Content="{Binding OrigTotalMatCost}" Grid.Row="2" Grid.Column="1" Margin="0,4,0,4"></Label>
                                            </Grid>
                                        </GroupBox>
                                    </Grid>
                                </Grid>
                            </Grid>

                            <ScrollViewer Margin="4,0" Grid.Column="1" VerticalScrollBarVisibility="Auto">
                                <Grid Background="#F5FFAF" x:Name="ProjectNoteGrid">
                                    <Grid Margin="10">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <!--<TextBlock>7/13/2021 12:42:52 PM</TextBlock>-->
                                        <TextBox Grid.Row="1" AcceptsReturn="True" ScrollViewer.VerticalScrollBarVisibility="Auto"  Height="40"/>
                                    </Grid>
                                </Grid>
                            </ScrollViewer>
                        </Grid>
                        <Grid Margin="4" Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid Background="#2F528F" Height="30" Margin="2, 1, 2, 1">
                                    <Label Content="Project Contacts" HorizontalAlignment="Left" Foreground="white" Margin="32,0,0,0"/>
                                </Grid>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="1*" />
                                    </Grid.ColumnDefinitions>
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <Grid Margin="4, 0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>
                                            <Label Content="Project Manager" HorizontalAlignment="Left" />
                                            <Grid Grid.Row="1" x:Name="PMGrid">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>
                                                <ComboBox ItemsSource="{Binding ProjectManagers}" DisplayMemberPath="PMName" SelectedValuePath="ID" IsEditable="True" SelectedValue="{Binding SelectedPMId, Mode=TwoWay}" />
                                            </Grid>
                                        </Grid>
                                    </ScrollViewer>
                                    <Grid Grid.Column="1" Margin="4, 0, 4, 0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Label Content="Superintendent" HorizontalAlignment="Left" />
                                        <Grid Grid.Row="1" x:Name="SuptGrid">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <ComboBox ItemsSource="{Binding Superintendents}" DisplayMemberPath="SupName" SelectedValuePath="ID" IsEditable="True" SelectedValue="{Binding SelectedPMId, Mode=TwoWay}" />
                                        </Grid>
                                    </Grid>
                                    <Grid Grid.Column="2" Grid.Row="1">
                                        <Grid Margin="0, 30, 0, 0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="2*" />
                                                    <ColumnDefinition Width="3*" />
                                                </Grid.ColumnDefinitions>
                                                <Label Margin="0,4,0,4">Estimator:</Label>
                                                <ComboBox x:Name="Estimator_CB" ItemsSource="{Binding Estimators}" Grid.Row="1" Grid.Column="1" Margin="0,4,16,4" DisplayMemberPath="EstimatorName" SelectedValuePath="ID" SelectedValue="{Binding SelectedEstimatorID}" IsEditable="True" />
                                            </Grid>
                                            <Grid Grid.Row="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="2*" />
                                                    <ColumnDefinition Width="3*" />
                                                </Grid.ColumnDefinitions>
                                                <Label Margin="0,4,0,4">Project Coord:</Label>
                                                <ComboBox x:Name="ProjectCoord_CB" ItemsSource="{Binding PCs}" Grid.Row="1" Grid.Column="1" Margin="0,4,16,4" DisplayMemberPath="PCName" SelectedValuePath="ID" SelectedValue="{Binding SelectedProjectCoordID}" IsEditable="True" />
                                            </Grid>
                                            <Grid Grid.Row="2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="2*" />
                                                    <ColumnDefinition Width="3*" />
                                                </Grid.ColumnDefinitions>
                                                <Label Margin="0,4,0,4">Arch Rep:</Label>
                                                <ComboBox x:Name="ArchRep_CB" ItemsSource="{Binding ArchReps}" Grid.Row="1" Grid.Column="1" Margin="0,4,16,4" DisplayMemberPath="ArchRepName" SelectedValuePath="ID" SelectedValue="{Binding SelectedArchRepID}" IsEditable="True" />
                                            </Grid>
                                            <Grid Grid.Row="3">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="2*" />
                                                    <ColumnDefinition Width="3*" />
                                                </Grid.ColumnDefinitions>
                                                <Label Margin="0,4,0,4">Submittal Contact:</Label>
                                                <ComboBox x:Name="SubContact_CB" ItemsSource="{Binding CustomerContacts}" Grid.Row="1" Grid.Column="1" Margin="0,4,16,4" DisplayMemberPath="CCName" SelectedValuePath="ID" SelectedValue="{Binding SelectedCCID}" IsEditable="True" />
                                            </Grid>
                                            <Grid Grid.Row="4">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="2*" />
                                                    <ColumnDefinition Width="3*" />
                                                </Grid.ColumnDefinitions>
                                                <Label Margin="0,4,0,4">Architect:</Label>
                                                <ComboBox x:Name="Architect_CB" ItemsSource="{Binding Architects}" Grid.Row="1" Grid.Column="1" Margin="0,4,16,4" DisplayMemberPath="ArchCompany" SelectedValuePath="ID" SelectedValue="{Binding SelectedArchitectID}" IsEditable="True" />
                                            </Grid>
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Grid>
                            <Grid Margin="4,0" Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid Background="#D79619" Height="30">
                                    <Label Content="Description" HorizontalAlignment="Left" Foreground="white"/>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem Header="SOV">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                        </Grid.RowDefinitions>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>
                            <DataGrid ItemsSource="{Binding SovCOs}" GridLinesVisibility="None" AutoGenerateColumns="False" HeadersVisibility="Column" BorderThickness="0" Background="White">
                                <DataGrid.Resources>
                                    <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource GridColumnHeaderBase}">
                                        <Setter Property="Background" Value="#5C83B4" />
                                    </Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="BorderThickness" Value="0,0,0,1" />
                                    </Style>
                                    <Style TargetType="ComboBox">
                                        <Setter Property="BorderThickness" Value="0,0,0,1" />
                                        <Setter Property="IsEditable" Value="True" />
                                    </Style>
                                </DataGrid.Resources>
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="Acronym" Width="2*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <ComboBox ItemsSource="{Binding DataContext.Acronyms, RelativeSource={RelativeSource AncestorType=local:ProjectView}}"
                SelectedValuePath="AcronymName" SelectedValue="{Binding SovAcronym, Mode=TwoWay}" DisplayMemberPath="AcronymName">
                                                    <!--<ComboBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <TextBox Text="{Binding AcronymName}" />
                                                        </DataTemplate>
                                                    </ComboBox.ItemTemplate>-->
                                                </ComboBox>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn IsReadOnly="False" Width="2*">
                                        <DataGridTemplateColumn.Header>
                                            <TextBlock Text="Change Order #" TextWrapping="Wrap" />
                                        </DataGridTemplateColumn.Header>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <ComboBox ItemsSource="{Binding DataContext.ChangeOrders, RelativeSource={RelativeSource AncestorType=local:ProjectView}}" DisplayMemberPath="CoItemNo" SelectedValuePath="CoItemNo" SelectedValue="{Binding CoItemNo, Mode=TwoWay}"></ComboBox>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn IsReadOnly="False" Width="4*">
                                        <DataGridTemplateColumn.Header>
                                            <TextBlock Text="Item" TextWrapping="Wrap" />
                                        </DataGridTemplateColumn.Header>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBox Text="{Binding SovDesc}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn IsReadOnly="False" Width="2*">
                                        <DataGridTemplateColumn.Header>
                                            <TextBlock Text="Material Only" TextWrapping="Wrap" />
                                        </DataGridTemplateColumn.Header>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox IsChecked="{Binding MatOnly}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5*" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>
                            <TabControl Margin="10" BorderBrush="Gainsboro">
                                <TabControl.Resources>
                                    <Style TargetType="TabItem">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TabItem">
                                                    <Border Name="Border" BorderThickness="1,1,1,0" BorderBrush="Gainsboro" CornerRadius="4,4,0,0" Margin="2,0">
                                                        <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Header" Margin="10,2"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter TargetName="Border" Property="Background" Value="LightSkyBlue" />
                                                        </Trigger>
                                                        <Trigger Property="IsSelected" Value="False">
                                                            <Setter TargetName="Border" Property="Background" Value="GhostWhite" />
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
