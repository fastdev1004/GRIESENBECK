<Page x:Class="WpfApp.View.AdminView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp.View"
      xmlns:converter="clr-namespace:WpfApp.Converter"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1700"
      Title="AdministrationView">

    <Page.Resources>
        <ResourceDictionary>
            <converter:DateTimeToDateConverter x:Key="DateTimeToDateConverter" />
            <converter:DateTimeToDateTimeConverter x:Key="DateTimeToDateTimeConverter" />
            <converter:ZeroToEmptyStringConverter x:Key="ZeroToEmptyStringConverter" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Themes/Generic.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid>
            <Border BorderThickness="0 0 0 4" BorderBrush="#B6302D">
                <Grid Background="#14305F">
                    <Button Click="GoBack" Width="40" Height="20" HorizontalAlignment="Left" Margin="10,0,0,0">Back</Button>
                    <TextBlock Margin="80, 0,0,0" Text="Administration"  FontSize="32" Foreground="White" VerticalAlignment="Center">
                    </TextBlock>
                </Grid>
            </Border>
        </Grid>
        <Grid Grid.Row="1">
            <TabControl Margin="10" BorderBrush="Gainsboro" SelectionChanged="AdminDataGrid_TabChanged">
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border Name="Border" BorderThickness="1,1,1,0" BorderBrush="Gainsboro" CornerRadius="4,4,0,0" Margin="2,0">
                                        <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Header" Margin="10,2"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="LightSkyBlue" />
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="False">
                                            <Setter TargetName="Border" Property="Background" Value="GhostWhite" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>
                <TabItem Header="Customers" HorizontalAlignment="Left" Width="114">
                    <Grid Margin="10">
                        <Grid.Resources>
                            <Style TargetType="Label">
                                <Setter Property="HorizontalAlignment" Value="Right" />
                            </Style>
                        </Grid.Resources>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*" />
                            <RowDefinition Height="1*" />
                        </Grid.RowDefinitions>
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="5*" />
                            </Grid.ColumnDefinitions>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid Margin="0,0,0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="5*" />
                                    </Grid.ColumnDefinitions>
                                    <Label Content="Full Name:" />
                                    <TextBox Grid.Column="1" Text="{Binding SelectedCustFullName, Mode=TwoWay}" />
                                </Grid>
                                <Grid Grid.Row="1" Margin="0,0,0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="5*" />
                                    </Grid.ColumnDefinitions>
                                    <Label Content="Short Name:" />
                                    <Grid Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3*" />
                                            <ColumnDefinition Width="2*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBox Text="{Binding SelectedCustShortName, Mode=TwoWay}" />
                                        <Grid Grid.Column="1">
                                            <WrapPanel HorizontalAlignment="Right">
                                                <Label Content="Active?" />
                                                <CheckBox Grid.Column="1" IsChecked="{Binding SelectedCustActive, Mode=TwoWay}" />
                                            </WrapPanel>
                                        </Grid>
                                    </Grid>
                                </Grid>
                                <Grid Grid.Row="2" Margin="0,0,0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="4*" />
                                    </Grid.ColumnDefinitions>
                                    <Label Content="PO Box:" />
                                    <TextBox Grid.Column="1" Text="{Binding SelectedCustPoNumber, Mode=TwoWay}" />
                                </Grid>
                                <Grid Grid.Row="3" Margin="0,0,0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="5*" />
                                    </Grid.ColumnDefinitions>
                                    <Label Content="Address:" />
                                    <TextBox Grid.Column="1" Text="{Binding SelectedCustAddress, Mode=TwoWay}" />
                                </Grid>
                                <Grid Grid.Row="4" Margin="0,0,0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="5*" />
                                    </Grid.ColumnDefinitions>
                                    <Label Content="City:" />
                                    <Grid Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="1*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBox Text="{Binding SelectedCustCity, Mode=TwoWay}" />
                                        <Grid Grid.Column="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*" />
                                                <ColumnDefinition Width="2*" />
                                            </Grid.ColumnDefinitions>
                                            <Label Content="Phone" />
                                            <TextBox Grid.Column="1" Text="{Binding SelectedCustPhone, Mode=TwoWay}" />
                                        </Grid>
                                    </Grid>
                                </Grid>
                                <Grid Grid.Row="5" Margin="0,0,0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="5*" />
                                    </Grid.ColumnDefinitions>
                                    <Label Content="State:" />
                                    <Grid Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="1*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*" />
                                                <ColumnDefinition Width="2*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBox MaxLength="2" Text="{Binding SelectedCustState, Mode=TwoWay}" />
                                            <Grid Grid.Column="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1*" />
                                                    <ColumnDefinition Width="2*" />
                                                </Grid.ColumnDefinitions>
                                                <Label Content="Zip:" />
                                                <TextBox Grid.Column="1" Text="{Binding SelectedCustZip, Mode=TwoWay}" />
                                            </Grid>
                                        </Grid>
                                        <Grid Grid.Column="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*" />
                                                <ColumnDefinition Width="2*" />
                                            </Grid.ColumnDefinitions>
                                            <Label Content="FAX:" />
                                            <TextBox Grid.Column="1" Text="{Binding SelectedCustFax, Mode=TwoWay}" />
                                        </Grid>
                                    </Grid>
                                </Grid>
                                <Grid Grid.Row="6" Margin="0,0,0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="5*" />
                                    </Grid.ColumnDefinitions>
                                    <Label Content="Email:" />
                                    <TextBox Grid.Column="1" Text="{Binding SelectedCustEmail, Mode=TwoWay}" />
                                </Grid>
                                <Grid Grid.Row="7">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="5*" />
                                    </Grid.ColumnDefinitions>
                                    <Label Content="Notes:" />
                                    <Grid Grid.Column="1" Background="#F5FFAF">
                                        <DataGrid Margin="4,0" Padding="10" Grid.Column="1" ItemsSource="{Binding CustomerNotes, Mode=TwoWay}" GridLinesVisibility="None" AutoGenerateColumns="False" HeadersVisibility="None" BorderThickness="0" Background="#F5FFAF" CanUserAddRows="False" SelectedIndex="{Binding SelectedCustNoteRowIndex, Mode=TwoWay}">
                                            <DataGrid.Resources>
                                                <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource GridColumnHeaderBase}">
                                                    <Setter Property="Background" Value="#4BACC6" />
                                                </Style>
                                                <Style TargetType="TextBox">
                                                    <Setter Property="TextWrapping" Value="Wrap" />
                                                </Style>
                                                <Style TargetType="Label">
                                                    <Setter Property="HorizontalAlignment" Value="Right" />
                                                </Style>
                                                <Style TargetType="DataGridRow">
                                                    <Setter Property="Height" Value="Auto" />
                                                    <Setter Property="BorderThickness" Value="0" />
                                                    <Setter Property="Margin" Value="0,4" />
                                                </Style>
                                            </DataGrid.Resources>
                                            <DataGrid.Columns>
                                                <DataGridTemplateColumn Header="Installation Notes" Width="*">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <Grid>
                                                                <Grid Style="{StaticResource ParentGridStyle}">
                                                                    <Grid.RowDefinitions>
                                                                        <RowDefinition Height="Auto" />
                                                                        <RowDefinition Height="Auto" />
                                                                    </Grid.RowDefinitions>
                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="1*" />
                                                                            <ColumnDefinition Width="1*" />
                                                                        </Grid.ColumnDefinitions>
                                                                        <TextBlock Text="{Binding NotesDateAdded , Mode=TwoWay}" />
                                                                        <TextBlock Grid.Column="1" Text="{Binding NoteUserName, Mode=TwoWay}" HorizontalAlignment="Right" />
                                                                        <TextBlock Grid.Column="1" Text="{Binding NoteID, Mode=TwoWay}" Visibility="Hidden" />
                                                                    </Grid>
                                                                    <Grid Grid.Row="1">
                                                                        <TextBox Text="{Binding NotesNote, Mode=TwoWay}" AcceptsReturn="True" ScrollViewer.VerticalScrollBarVisibility="Auto" Height="40" PreviewKeyUp="CustomerNote_PreviewKeyUp" />
                                                                    </Grid>
                                                                </Grid>
                                                            </Grid>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </Grid>
                                </Grid>
                            </Grid>
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Button Width="55"  Command="{Binding NewCustomerCommand}">New</Button>
                            </Grid>
                            <Grid Grid.Column="2">
                                <TabControl Margin="10" BorderBrush="Gainsboro">
                                    <TabControl.Resources>
                                        <Style TargetType="TabItem">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="TabItem">
                                                        <Border Name="Border" BorderThickness="1,1,1,0" BorderBrush="Gainsboro" CornerRadius="4,4,0,0" Margin="2,0">
                                                            <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Header" Margin="10,2"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsSelected" Value="True">
                                                                <Setter TargetName="Border" Property="Background" Value="LightSkyBlue" />
                                                            </Trigger>
                                                            <Trigger Property="IsSelected" Value="False">
                                                                <Setter TargetName="Border" Property="Background" Value="GhostWhite" />
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </TabControl.Resources>
                                    <TabItem Header="Project Managers" HorizontalAlignment="Left" Width="Auto">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="1*" />
                                                <RowDefinition Height="1*" />
                                            </Grid.RowDefinitions>
                                            <Grid Margin="10">
                                                <DataGrid ItemsSource="{Binding CustPMs, Mode=TwoWay}" GridLinesVisibility="None" AutoGenerateColumns="False" HeadersVisibility="Column" BorderThickness="1" Background="White" CanUserAddRows="False" SelectedIndex="{Binding SelectedPMRowIndex, Mode=TwoWay}">
                                                    <DataGrid.Resources>
                                                        <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource GridColumnHeaderBase}">
                                                            <Setter Property="Background" Value="#5C83B4" />
                                                            <Setter Property="Height" Value="30" />
                                                        </Style>
                                                        <Style TargetType="DataGridCell">
                                                            <Setter Property="Padding" Value="10,0" />
                                                            <Setter Property="Margin" Value="10,0" />
                                                            <!--<Setter Property="BorderThickness" Value="0,0,0,1" />-->
                                                        </Style>
                                                        <Style TargetType="TextBox">
                                                            <Setter Property="BorderThickness" Value="0,0,0,1" />
                                                        </Style>
                                                        <Style TargetType="CheckBox">
                                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                                            <Setter Property="VerticalAlignment" Value="Center" />
                                                        </Style>
                                                    </DataGrid.Resources>
                                                    <DataGrid.Columns>
                                                        <DataGridTemplateColumn IsReadOnly="False" Width="4*">
                                                            <DataGridTemplateColumn.Header>
                                                                <TextBlock Text="Name" TextWrapping="Wrap" />
                                                            </DataGridTemplateColumn.Header>
                                                            <DataGridTemplateColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <Grid>
                                                                    <TextBox Text="{Binding PMName, Mode=TwoWay}" KeyUp="CustPM_PreviewKeyUp" Tag="PmName" />
                                                                    <TextBlock Visibility="Hidden" Text="{Binding ID, Mode=TwoWay}" />
                                                                    </Grid>
                                                                </DataTemplate>
                                                            </DataGridTemplateColumn.CellTemplate>
                                                        </DataGridTemplateColumn>
                                                        <DataGridTemplateColumn IsReadOnly="False" Width="2*">
                                                            <DataGridTemplateColumn.Header>
                                                                <TextBlock Text="Phone" TextWrapping="Wrap" />
                                                            </DataGridTemplateColumn.Header>
                                                            <DataGridTemplateColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <Grid>
                                                                        <TextBox Text="{Binding PMPhone, Mode=TwoWay}" KeyUp="CustPM_PreviewKeyUp" Tag="PmPhone" />
                                                                    <TextBlock Visibility="Hidden" Text="{Binding ID, Mode=TwoWay}" />
                                                                    </Grid>
                                                                </DataTemplate>
                                                            </DataGridTemplateColumn.CellTemplate>
                                                        </DataGridTemplateColumn>
                                                        <DataGridTemplateColumn IsReadOnly="False" Width="2*">
                                                            <DataGridTemplateColumn.Header>
                                                                <TextBlock Text="Cell" TextWrapping="Wrap" />
                                                            </DataGridTemplateColumn.Header>
                                                            <DataGridTemplateColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <Grid>
                                                                        <TextBox Text="{Binding PMCellPhone, Mode=TwoWay}" KeyUp="CustPM_PreviewKeyUp" Tag="PmCell" />
                                                                    <TextBlock Visibility="Hidden" Text="{Binding ID, Mode=TwoWay}" />
                                                                    </Grid>
                                                                </DataTemplate>
                                                            </DataGridTemplateColumn.CellTemplate>
                                                        </DataGridTemplateColumn>
                                                        <DataGridTemplateColumn IsReadOnly="False" Width="1*">
                                                            <DataGridTemplateColumn.Header>
                                                                <TextBlock Text="Active?" TextWrapping="Wrap" />
                                                            </DataGridTemplateColumn.Header>
                                                            <DataGridTemplateColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <Grid>
                                                                        <CheckBox IsChecked="{Binding Active, Mode=TwoWay}" Checked="CustPM_ChkPreviewKeyUp" Unchecked="CustPM_ChkPreviewKeyUp" />
                                                                    <TextBlock Visibility="Hidden" Text="{Binding ID, Mode=TwoWay}" />
                                                                    </Grid>
                                                                </DataTemplate>
                                                            </DataGridTemplateColumn.CellTemplate>
                                                        </DataGridTemplateColumn>
                                                        <DataGridTemplateColumn IsReadOnly="False" Width="4*">
                                                            <DataGridTemplateColumn.Header>
                                                                <TextBlock Text="Email" TextWrapping="Wrap" />
                                                            </DataGridTemplateColumn.Header>
                                                            <DataGridTemplateColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <Grid>
                                                                        <TextBox Text="{Binding PMEmail, Mode=TwoWay}" KeyUp="CustPM_PreviewKeyUp" Tag="PmEmail" />
                                                                        <TextBlock Visibility="Hidden" Text="{Binding ID, Mode=TwoWay}" />
                                                                    </Grid>
                                                                </DataTemplate>
                                                            </DataGridTemplateColumn.CellTemplate>
                                                        </DataGridTemplateColumn>
                                                    </DataGrid.Columns>
                                                </DataGrid>
                                            </Grid>
                                            <Grid Grid.Row="1" Margin="4">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1*" />
                                                    <ColumnDefinition Width="5*" />
                                                    <ColumnDefinition Width="1*" />
                                                </Grid.ColumnDefinitions>
                                                <Label Content="Notes:" />
                                                <Grid Grid.Column="1" Background="#F5FFAF">
                                                    <DataGrid Margin="4,0" Padding="10" Grid.Column="1" ItemsSource="{Binding CustPMNotes, Mode=TwoWay}" GridLinesVisibility="None" AutoGenerateColumns="False" HeadersVisibility="None" BorderThickness="0" Background="#F5FFAF" CanUserAddRows="False" SelectedIndex="{Binding SelectedPMNoteRowIndex, Mode=TwoWay}">
                                                        <DataGrid.Resources>
                                                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource GridColumnHeaderBase}">
                                                                <Setter Property="Background" Value="#4BACC6" />
                                                            </Style>
                                                            <Style TargetType="TextBox">
                                                                <Setter Property="TextWrapping" Value="Wrap" />
                                                            </Style>
                                                            <Style TargetType="Label">
                                                                <Setter Property="HorizontalAlignment" Value="Right" />
                                                            </Style>
                                                            <Style TargetType="DataGridRow">
                                                                <Setter Property="Height" Value="Auto" />
                                                                <Setter Property="BorderThickness" Value="0" />
                                                                <Setter Property="Margin" Value="0,4" />
                                                            </Style>
                                                        </DataGrid.Resources>
                                                        <DataGrid.Columns>
                                                            <DataGridTemplateColumn Header="Installation Notes" Width="*">
                                                                <DataGridTemplateColumn.CellTemplate>
                                                                    <DataTemplate>
                                                                        <Grid>
                                                                            <Grid Style="{StaticResource ParentGridStyle}">
                                                                                <Grid.RowDefinitions>
                                                                                    <RowDefinition Height="Auto" />
                                                                                    <RowDefinition Height="Auto" />
                                                                                </Grid.RowDefinitions>
                                                                                <Grid>
                                                                                    <Grid.ColumnDefinitions>
                                                                                        <ColumnDefinition Width="1*" />
                                                                                        <ColumnDefinition Width="1*" />
                                                                                    </Grid.ColumnDefinitions>
                                                                                    <TextBlock Text="{Binding NotesDateAdded , Mode=TwoWay}" />
                                                                                    <TextBlock Grid.Column="1" Text="{Binding NoteUserName, Mode=TwoWay}" HorizontalAlignment="Right" />
                                                                                    <TextBlock Grid.Column="1" Text="{Binding NoteID, Mode=TwoWay}" Visibility="Hidden" />
                                                                                </Grid>
                                                                                <Grid Grid.Row="1">
                                                                                    <TextBox Text="{Binding NotesNote, Mode=TwoWay}" AcceptsReturn="True" ScrollViewer.VerticalScrollBarVisibility="Auto" Height="40" PreviewKeyUp="PMNote_PreviewKeyUp"/>
                                                                                </Grid>
                                                                            </Grid>
                                                                        </Grid>
                                                                    </DataTemplate>
                                                                </DataGridTemplateColumn.CellTemplate>
                                                            </DataGridTemplateColumn>
                                                        </DataGrid.Columns>
                                                    </DataGrid>
                                                </Grid>
                                            </Grid>
                                        </Grid>
                                    </TabItem>
                                    <TabItem Header="Superintendents" Width="Auto">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="1*" />
                                                <RowDefinition Height="1*" />
                                            </Grid.RowDefinitions>
                                            <Grid Margin="10">
                                                <DataGrid ItemsSource="{Binding CustSupts, Mode=TwoWay}" GridLinesVisibility="None" AutoGenerateColumns="False" HeadersVisibility="Column" BorderThickness="1" Background="White" CanUserAddRows="False" SelectedIndex="{Binding SelectedSuptRowIndex, Mode=TwoWay}" >
                                                    <DataGrid.Resources>
                                                        <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource GridColumnHeaderBase}">
                                                            <Setter Property="Background" Value="#5C83B4" />
                                                            <Setter Property="Height" Value="30" />
                                                        </Style>
                                                        <Style TargetType="DataGridCell">
                                                            <Setter Property="Padding" Value="10,0" />
                                                            <Setter Property="Margin" Value="10,0" />
                                                            <!--<Setter Property="BorderThickness" Value="0,0,0,1" />-->
                                                        </Style>
                                                        <Style TargetType="TextBox">
                                                            <Setter Property="BorderThickness" Value="0,0,0,1" />
                                                        </Style>
                                                        <Style TargetType="CheckBox">
                                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                                            <Setter Property="VerticalAlignment" Value="Center" />
                                                        </Style>
                                                    </DataGrid.Resources>
                                                    <DataGrid.Columns>
                                                        <DataGridTemplateColumn IsReadOnly="False" Width="4*">
                                                            <DataGridTemplateColumn.Header>
                                                                <TextBlock Text="Name" TextWrapping="Wrap" />
                                                            </DataGridTemplateColumn.Header>
                                                            <DataGridTemplateColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <Grid>
                                                                    <TextBox Text="{Binding SupName}" KeyUp="CustSupt_PreviewKeyUp" Tag="SupName" />
                                                                        <TextBlock Visibility="Hidden" Text="{Binding SupID, Mode=TwoWay}" />
                                                                    </Grid>
                                                                </DataTemplate>
                                                            </DataGridTemplateColumn.CellTemplate>
                                                        </DataGridTemplateColumn>
                                                        <DataGridTemplateColumn IsReadOnly="False" Width="2*">
                                                            <DataGridTemplateColumn.Header>
                                                                <TextBlock Text="Phone" TextWrapping="Wrap" />
                                                            </DataGridTemplateColumn.Header>
                                                            <DataGridTemplateColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <Grid>
                                                                    <TextBox Text="{Binding SupPhone}" PreviewKeyUp="CustSupt_PreviewKeyUp" Tag="SupPhone" />
                                                                    <TextBlock Visibility="Hidden" Text="{Binding SupID, Mode=TwoWay}" />
                                                                    </Grid>
                                                                </DataTemplate>
                                                            </DataGridTemplateColumn.CellTemplate>
                                                        </DataGridTemplateColumn>
                                                        <DataGridTemplateColumn IsReadOnly="False" Width="2*">
                                                            <DataGridTemplateColumn.Header>
                                                                <TextBlock Text="Cell" TextWrapping="Wrap" />
                                                            </DataGridTemplateColumn.Header>
                                                            <DataGridTemplateColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <Grid>
                                                                    <TextBox Text="{Binding SupCellPhone}" PreviewKeyUp="CustSupt_PreviewKeyUp" Tag="SupCell" />
                                                                    <TextBlock Visibility="Hidden" Text="{Binding SupID, Mode=TwoWay}" />
                                                                    </Grid>
                                                                </DataTemplate>
                                                            </DataGridTemplateColumn.CellTemplate>
                                                        </DataGridTemplateColumn>
                                                        <DataGridTemplateColumn IsReadOnly="False" Width="1*">
                                                            <DataGridTemplateColumn.Header>
                                                                <TextBlock Text="Active?" TextWrapping="Wrap" />
                                                            </DataGridTemplateColumn.Header>
                                                            <DataGridTemplateColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <Grid>
                                                                    <CheckBox IsChecked="{Binding Active}" Checked="CustSupt_ChkPreviewKeyUp" Unchecked="CustSupt_ChkPreviewKeyUp" />
                                                                    <TextBlock Visibility="Hidden" Text="{Binding SupID, Mode=TwoWay}" />
                                                                    </Grid>
                                                                </DataTemplate>
                                                            </DataGridTemplateColumn.CellTemplate>
                                                        </DataGridTemplateColumn>
                                                        <DataGridTemplateColumn IsReadOnly="False" Width="4*">
                                                            <DataGridTemplateColumn.Header>
                                                                <TextBlock Text="Email" TextWrapping="Wrap" />
                                                            </DataGridTemplateColumn.Header>
                                                            <DataGridTemplateColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <Grid>
                                                                    <TextBox Text="{Binding SupEmail}" PreviewKeyUp="CustSupt_PreviewKeyUp" Tag="SupEmail" />
                                                                    <TextBlock Visibility="Hidden" Text="{Binding SupID, Mode=TwoWay}" />
                                                                    </Grid>
                                                                </DataTemplate>
                                                            </DataGridTemplateColumn.CellTemplate>
                                                        </DataGridTemplateColumn>
                                                    </DataGrid.Columns>
                                                </DataGrid>
                                            </Grid>
                                            <Grid Grid.Row="1" Margin="4">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1*" />
                                                    <ColumnDefinition Width="5*" />
                                                    <ColumnDefinition Width="1*" />
                                                </Grid.ColumnDefinitions>
                                                <Label Content="Notes:" />
                                                <Grid Grid.Column="1" Background="#F5FFAF">
                                                    <DataGrid Margin="4,0" Padding="10" Grid.Column="1" ItemsSource="{Binding CustSuptNotes, Mode=TwoWay}" GridLinesVisibility="None" AutoGenerateColumns="False" HeadersVisibility="None" BorderThickness="0" Background="#F5FFAF" CanUserAddRows="False" SelectedIndex="{Binding SelectedSuptNoteRowIndex, Mode=TwoWay}">
                                                        <DataGrid.Resources>
                                                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource GridColumnHeaderBase}">
                                                                <Setter Property="Background" Value="#4BACC6" />
                                                            </Style>
                                                            <Style TargetType="TextBox">
                                                                <Setter Property="TextWrapping" Value="Wrap" />
                                                            </Style>
                                                            <Style TargetType="Label">
                                                                <Setter Property="HorizontalAlignment" Value="Right" />
                                                            </Style>
                                                            <Style TargetType="DataGridRow">
                                                                <Setter Property="Height" Value="Auto" />
                                                                <Setter Property="BorderThickness" Value="0" />
                                                                <Setter Property="Margin" Value="0,4" />
                                                            </Style>
                                                        </DataGrid.Resources>
                                                        <DataGrid.Columns>
                                                            <DataGridTemplateColumn Header="Installation Notes" Width="*">
                                                                <DataGridTemplateColumn.CellTemplate>
                                                                    <DataTemplate>
                                                                        <Grid>
